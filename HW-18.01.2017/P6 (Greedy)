#include <bits/stdc++.h>
using namespace std;
typedef pair<int, int> pii;
int main() {
	int n;
	cin >> n;
	vector<pii> v(n);
	for (int i = 0; i < n; i++) cin >> v[i].second >> v[i].first;
	sort(v.begin(), v.end());
	int r = v[0].first, ans = 1;
	for (int i = 1; i < n; i++) {
		if (v[i].second >= r) {
			ans++; r = v[i].first;
		}
	}
	cout << ans;
}
